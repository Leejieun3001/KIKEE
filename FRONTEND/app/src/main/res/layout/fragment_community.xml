<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFF3F0"
    android:layout_height="match_parent"
    tools:context="kidskeeper.sungshin.or.kr.kikee.Adult.Community.CommunityFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/community_recyclerview_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="30dp"
                tools:listitem="@layout/item_boardlist">

            </android.support.v7.widget.RecyclerView>
        </ScrollView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/reviewlist_floatingbutton_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp" />
    </RelativeLayout>
</LinearLayout>
