<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#FFF3F0"
    android:gravity="center"
    tools:context="kidskeeper.sungshin.or.kr.kikee.Home.HomeActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/home_button_go_adult"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="#FFF3F0"
            app:srcCompat="@drawable/adult" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:text="어른" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/home_button_go_kids"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/home_button_go_adult"
            android:layout_gravity="center_horizontal"
            android:background="#FFF3F0"
            app:srcCompat="@drawable/kids" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:text="아이" />

    </LinearLayout>
</LinearLayout>
