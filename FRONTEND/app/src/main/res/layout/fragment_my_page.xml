<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF3F0"
    tools:context="kidskeeper.sungshin.or.kr.kikee.Adult.Mypage.MyPageFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingHorizontal="35dp"
        android:paddingVertical="5dp"
        android:layout_margin="15dp"
        android:text="MY BORDER"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:background="#FFE08C"
        android:textSize="20dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mypage_recyvlerview_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="20dp"
        android:background="@color/colorWhite"
        tools:listitem="@layout/item_my_board"></android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/mypage_button_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/pink_round_bg"
        android:textColor="@color/colorWhite"
        android:text="LOGOUT" />

</LinearLayout>
